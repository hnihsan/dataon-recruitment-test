extends ../layout.pug

block content
  h1(class="mt-4") Room
  ol(class="breadcrumb mb-4")
    li(class="breadcrumb-item active") Edit a room

  div.row.mt-2
    div.col-md-6.mx-auto
      div(class="card mb-4 ")
        div.card-body
          form(method="POST" action="/rooms/edit/"+room.id)
            div(class="row mb-3")
              div.col-md-12.mb-2
                img(src="https://assets.aten.com/webpage/shared/Aten_BE/ISE2020/Meetingroom_Types_Medium.jpg" alt="meeting-rooms" class="img-thumbnail")
              div(class="col-md-12 mb-2")
                div(class="form-floating mb-3 mb-md-0")
                  input(class="form-control" id="inputRoomName" name="name" type="text" placeholder="Enter your full name" value=room.name)
                  label(for="inputRoomName") Room Name

              div(class="col-md-12")
                div(class="form-floating")
                  input(class="form-control" id="inputCapacity" type="number" name="capacity" placeholder="Enter your email" value=room.capacity)
                  label(for="inputCapacity") Capacity

            div(class="mt-4 mb-0")
              div.d-grid
                button(class="btn btn-primary btn-block") Edit Room
