extends ../layout.pug

block content
  h1(class="mt-4") Show User
  ol(class="breadcrumb mb-4")
    li(class="breadcrumb-item active") Show User

  div.row.mt-2
    div.col-md-6.mx-auto
      div(class="card mb-4")
        div.card-body
          form(action="/users/edit/"+user.id method="POST")
            div(class="row mb-2")
              div.col-md-12.mb-2.text-center
                img(src="https://w7.pngwing.com/pngs/340/946/png-transparent-avatar-user-computer-icons-software-developer-avatar-child-face-heroes-thumbnail.png" alt="meeting-rooms" class="img-thumbnail" style="max-width: 50%")

              div(class="col-md-12 mb-2")
                div(class="form-floating mb-3 mb-md-0")
                  input(class="form-control" id="inputFullName" name="fullname" value=user.fullname type="text" placeholder="Enter your full name" readonly)
                  label(for="inputFullName") Full name

              div(class="col-md-12 mb-2")
                div(class="form-floating")
                  input(class="form-control" id="inputEmail" name="email" value=user.email type="email" placeholder="Enter your email" readonly)
                  label(for="inputEmail") Email address

            div(class="mt-4 mb-0")
              div.d-grid
                a(class="btn btn-primary btn-block" href="/users") Back
