doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Login Room Management
    link(href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet")
    link(href='/css/styles.css' rel="stylesheet")
    link(href='/css/login.css' rel="stylesheet")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js")
  body
    div.row
      div.col-md-12
        section(class="vh-100 gradient-custom")
          div(class="container py-5 h-100")
            div(class="row d-flex justify-content-center align-items-center h-100")
              div(class="col-12 col-md-8 col-lg-6 col-xl-5")
                div(class="card bg-dark text-white" style="border-radius: 1rem;")
                  div(class="card-body p-5 text-center")
                    div(class="mb-md-5 mt-md-4 pb-5")
                      h2(class="fw-bold mb-2 text-uppercase") Login
                      p(class="text-white-50 mb-5") Please enter your login and password!
                      div(class="form-outline form-white mb-4")
                        input(type="email" id="typeEmailX" class="form-control form-control-lg")
                        label(class="form-label" for="typeEmailX") Email

                      div(class="form-outline form-white mb-4")
                        input(type="password" id="typePasswordX" class="form-control form-control-lg")
                        label(class="form-label" for="typePasswordX") Password

                      p(class="small mb-5 pb-lg-2")
                        a(class="text-white-50" href="#!") Forgot password?

                      button(class="btn btn-outline-light btn-lg px-5" type="submit") Login
